@page "/kayit"
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager Nav

<h3 class="mb-3">Kayıt</h3>

@if (!string.IsNullOrWhiteSpace(Error))
{
    <div class="alert alert-danger">@Error</div>
}

<div class="card" style="max-width:620px;">
    <div class="card-body">
        <form method="post" action="/auth/register">
            <div class="row g-2">
                <div class="col-md-6">
                    <label class="form-label">Ad Soyad</label>
                    <input class="form-control" name="adSoyad" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input class="form-control" name="email" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Kullanıcı Adı*</label>
                    <input class="form-control" name="kullaniciAdi" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Şifre*</label>
                    <input type="password" class="form-control" name="sifre" required />
                </div>
            </div>

            <button class="btn btn-success w-100 mt-3" type="submit">Kayıt Ol</button>
        </form>

        <div class="mt-3">
            Zaten hesabın var mı? <a href="/giris">Giriş yap</a>
        </div>
    </div>
</div>

@code {
    string? Error;

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var q = QueryHelpers.ParseQuery(uri.Query);

        if (q.TryGetValue("err", out var err))
            Error = err.ToString();
    }
}
