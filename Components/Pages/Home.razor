@page "/"
@using Microsoft.AspNetCore.Components.Routing
@inject ILogger<Home> Logger

<PageTitle>Home</PageTitle>

<h1>@_localizer["AppTitle"]</h1>

<p>
    Beyanname kayıtlarını görüntülemek ve test etmek için
    <NavLink href="/beyannameler" class="fw-bold text-primary" style="cursor:pointer;">
        buraya tıklayın
    </NavLink>.
</p>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var now = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss");
            Logger.LogInformation($"Log Home Test : {now}");
            StateHasChanged();
        }
    }
}
